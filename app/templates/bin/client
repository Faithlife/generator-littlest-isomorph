#!/usr/bin/env node
'use strict';

/*!
 * This "script" bootstraps the client-specific code. See Client.js for
 * more information.
 */
var littlest = require('littlest-isomorph');
var React = require('react');
var GitHubClient = require('../lib/clients/github');
var config = require('../lib/config');
var context = require('../lib/context');
var router = require('../lib/router');

// Attach a singleton client instance to the Context. All Actions will use
// this client from the browser. As such, all requests will be proxied through
// our server instance.
context.github = GitHubClient.createClient(config.client.github.proxy);

// Install the client.
littlest
  .createClient({
    router: router,
    window: typeof window === 'undefined' ? this : window,
    React: React,
    context: context
  })
  .start();

// Log the top-level configuration for debugging.
console.log('Config:', config);

// Expose React to trigger the React devtools.
if (config.env === 'development') {
  global.React = React;
}
